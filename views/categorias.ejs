<!DOCTYPE html>
<html>
<head>
  <title>Categorias</title>
  <style>
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #ddd; padding: 8px; }
    th { background-color: #f4f4f4; }
  </style>
</head>
<body>
  <h1>Categorias</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Descrição</th>
      </tr>
    </thead>
    <tbody>
      <% categorias.forEach(categoria => { %>
        <tr>
          <td><%= categoria.id %></td>
          <td><%= categoria.nome %></td>
          <td><%= categoria.descricao %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
